<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UIs.SendMoneyAmount">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco = "http://schemas.android.com/apk/res-auto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/activity_main_user_profile_profile_image"
        fresco:roundAsCircle="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        fresco:placeholderImage="@drawable/model"
        fresco:actualImageScaleType="fitXY"
        android:layout_alignParentRight="true"
        fresco:placeholderImageScaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Micheal Chauliac"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:gravity="center"
        android:fontFamily="@font/clannews"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="damilolaakinterinwa@gmail.com"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/clannews"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="$0.00"
        android:textColorHint="@color/light_text_color"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:fontFamily="@font/clannews"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Send"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/clannews"
        android:textAllCaps="false"
        app:cornerRadius="20dp"/>





</LinearLayout>