<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UIs.SendMoneySuccess">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/iconfinder_check_mark_checklist_complete_done"
        android:tint="@color/green"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:fontFamily="@font/clannews"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/send_money_success_amount"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:fontFamily="@font/clanmed"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/light_text_color"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:id="@+id/send_money_success_text"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center"
        android:fontFamily="@font/clannews"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Go Back Home"
        android:layout_marginTop="100dp"
        android:id="@+id/send_money_success_home_button"
        android:textAllCaps="false"/>

</LinearLayout>