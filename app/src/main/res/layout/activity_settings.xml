<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/special_activity_background"
    tools:context=".Settings">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:weightSum="5"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/iconfinder_chevron_left_4781844"
            android:tint="@color/colorPrimary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="Settings"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/clannews"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="right|center"/>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="5"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@drawable/model"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundAsCircle="false"
                fresco:roundedCornerRadius="5dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:orientation="vertical"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:text="Mr Bakkir Qarra"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/clanbook"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/clannews"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Normal Account"
                android:textColor="#ACACAC"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right|center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/switch_account"
                android:tint="#454647" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:text="Switch Account"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/clanbook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:gravity="right|center">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:layout_marginRight="5dp"
            android:rotation="180"
            android:src="@drawable/iconfinder_chevron_left_4781844"
            android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/verification_symbol"
                android:tint="#454647"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:text="Verification Status"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/clanbook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:gravity="right|center">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:rotation="180"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dms"
                android:tint="#454647" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:text="Help Desk"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/clanbook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:gravity="right|center">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:rotation="180"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/verification_symbol"
                android:tint="#454647"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:text="Portfolio"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/clanbook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:gravity="right|center">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:rotation="180"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/clannews"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="Privacy Policy"
            android:textColor="#4F565A"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:rotation="180"
            android:layout_marginTop="1dp"
            android:src="@drawable/iconfinder_chevron_left_4781844"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/clannews"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="Terms and Conditions"
            android:textColor="#4F565A"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:rotation="180"
            android:layout_marginTop="1dp"
            android:src="@drawable/iconfinder_chevron_left_4781844"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/clannews"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="Contact us"
            android:textColor="#4F565A"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:rotation="180"
            android:layout_marginTop="1dp"
            android:src="@drawable/iconfinder_chevron_left_4781844"
            android:tint="@color/colorPrimary"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/clannews"
        android:gravity="center"
        android:maxLines="1"
        android:text="\u00A9 Assist 2020"
        android:textColor="#4F565A"
        android:textSize="15dp" />
</LinearLayout>