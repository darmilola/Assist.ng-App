<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".GroceryStoreListing"
    android:orientation="vertical"
    android:elevation="1dp"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/store_listing_background"
        android:layout_weight="4.1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/iconfinder_chevron_left_4781844"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:id="@+id/store_listing_cart"
                android:background="@drawable/store_listing_cart_background"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/White"
                    android:src="@drawable/iconfinder_cart_4781848"/>

            </LinearLayout>
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="21dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/clanmed"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Fresh Pakistani Capsicum"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mudassir Supermarket Kano"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/light_text_color"
                    android:fontFamily="@font/clannews"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/capsicum"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/add_remove_background"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/White"
                            android:padding="3dp"
                            android:src="@drawable/ic_add_black_24dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Kg"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:fontFamily="@font/clanbold"/>
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/add_remove_background"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/White"
                            android:padding="3dp"
                            android:src="@drawable/ic_remove_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginLeft="16dp"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/clanmed"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/clannews"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:lineSpacingExtra="7dp"
                    android:text="Garlic Grows in many parts of the world and is a popular ingredient in cooking due to it's strong smell and delicious taste garlic is very delicious but has very few colories"
                    android:textColor="#868585"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keep Shopping from Mudassir"
                    android:layout_marginLeft="16dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/clanmed"
                    android:textColor="@color/colorPrimary"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/store_listing_recyclerview"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"

                    tools:listitem="@layout/grocery_recycler_item"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.7">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14dp"
                android:textColor="@color/light_primary"
                android:fontFamily="@font/clannews"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250"
                android:textSize="25dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/White"
                android:fontFamily="@font/clanmed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/add_to_cart_background"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/iconfinder_ic_add_shopping_cart"
                android:tint="@color/White"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textSize="17dp"
                android:textColor="@color/White"
                android:fontFamily="@font/clannews"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>