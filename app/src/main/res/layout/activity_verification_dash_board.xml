<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".VerificationDashBoard">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:contentInsetEnd="0dp"
        android:layout_marginTop="20dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/white"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Verification Type"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/clannews"
                android:gravity="center|left"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@drawable/worker">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7C000000"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clanbold"
                android:text="Verifications for\n Employee"
                android:textColor="#EEEDED"
                android:gravity="center"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/employee_verifications_getting_started"
                android:background="@drawable/white_button_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Get Started"
                    android:textSize="18dp"
                    android:fontFamily="@font/clanbold"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:background="@drawable/corpmemberpics">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7C000000"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/clanbold"
                        android:text="KopasAid Verifications for\n Corp Members"
                        android:textColor="#EEEDED"
                        android:gravity="center"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:id="@+id/corp_member_verifications_getting_started"
                        android:background="@drawable/white_button_background">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Get Started"
                            android:textSize="18dp"
                            android:fontFamily="@font/clanbold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:background="@drawable/handyman">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7C000000"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/clanbold"
                        android:gravity="center"
                        android:text="Verifications for Assist Providers"
                        android:textColor="#EEEDED"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:id="@+id/assist_provider_getting_started"
                        android:background="@drawable/white_button_background">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Get Started"
                            android:textSize="18dp"
                            android:fontFamily="@font/clanbold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>