<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center">


    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:tint="@color/colorPrimary"
        android:layout_marginLeft="77dp"
        android:src="@drawable/ic_iconfinder__location_map_pin_place_point"/>
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:id="@+id/rateLayout"
        android:gravity="center|top"
        app:cardCornerRadius="4dp"
        android:background="@color/special_activity_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:maxWidth="130dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="Velachery hgh  hh"
                android:layout_marginLeft="15dp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:rotation="180"
                android:tint="@color/colorPrimary"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>