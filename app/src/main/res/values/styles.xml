<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BottomNavigationStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyleInactive</item>
    </style>


    <style name="SequenceTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">7</item>
        <item name="android:fontFamily">@font/clannews</item>
    </style>



    <style name="SequenceDesc" parent="@android:style/TextAppearance.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/clannews</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13dp</item>
        <item name="fontFamily">@font/clanmed</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TabTextStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="itemTextAppearanceActive">@style/TabSelectedTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/TabTextAppearance</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabSelectedTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/clannews</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/clannews</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="BottomNavigationTextStyleInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/clanbook</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="sign_up_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="android:textColorHint">@color/light_text_color</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

</resources>
